.address-container{
  width: 750rpx;
  height: 100vh;
  box-sizing: border-box;
  position: relative;
  padding-bottom: 120rpx;
}
.address-container::before{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 6rpx;
  background: repeating-linear-gradient(
    45deg,
    #ff6c6c 0,
    #ff6c6c 20%,
    transparent 0,
    transparent 25%,
    #1989fa 0,
    #1989fa 45%,
    transparent 0,
    transparent 50%
  );
  background-size: 200rpx;
  content: "";
}
.address-wrapper{
  width: 100%;
  height: 100%;
}
.address-item{
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  padding: 40rpx 20rpx;
}
.scroll-y-address{
  height: 100%;
  overflow: hidden;
}
.address-box{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.address-name{
  width: 160rpx;
  align-items: flex-start;
  font-size: 28rpx;
}
.default{
  width: 60rpx;
  height: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #B22222;
  color: #B22222;
  font-size: 24rpx;
  margin-top: 6rpx;
}
.address-info{
  font-size: 26rpx;
  flex: 1;
}
.address-detail{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #808080
}
.address-edit{
  width: 80rpx;
  justify-content: center;
}
.address-add{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 40rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
}
.address-btn button{
  height: 70rpx;
  width: 340rpx;
  font-size: 28rpx;
}