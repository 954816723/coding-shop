.car-container{
  background-color: #F5F5F5;
}
.car-wrapper{
  min-height: 300rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.btn-wrapper{
  width: 100%;
  min-height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-btn button{
  width: 150rpx;
}
.car-item{
  display: flex;
  align-items: center;
  width: 100%;
  height: 250rpx;
  margin-bottom: 20rpx;
  background-color: #FFF;
}
.goods-select{
  margin: 0 20rpx;
}
.goods-detail{
  display: flex;
  align-items: center;
  flex: 1;
  height: 100%;
}
.goods-detail .goods-img{
  width: 200rpx;
  height: 200rpx;
}
.goods-r{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
  width: 400rpx;
  height: 200rpx;
  margin-left: 20rpx;
}
.goods-r .name{
  font-size: 28rpx;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.goods-r .desc{
  font-size: 24rpx;
  color: #A9A9A9
}
.price-num{
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx 0 0;
}
.price{
  color: red;
}
.fav-title{
  font-size: 26rpx;
  font-weight: 600;
  margin: 20rpx 0;
}
.fav-goods{
  background-color: #FFF;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  margin-top: 40rpx;
}
.van-swipe-cell__right {
  right: 0;
  -webkit-transform: translate3d(100%, 0, 0);
  transform: translate3d(100%, 0, 0);
}
.van-swipe-cell__left, .van-swipe-cell__right {
  position: absolute;
  top: 0;
  height: 100%;
}

.del-btn {
  padding: 0 15px;
  font-size: 14px;
  height: 100%;
  color: #fff;
  background-color: #ee0a24;
  border: 1px solid #ee0a24;
  display: flex;
  justify-content: center;
  align-items: center;
}
